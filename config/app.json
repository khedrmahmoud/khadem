{
  "app": {
    "name": "Khadem Application",
    "version": "1.0.0",
    "env": "development",
    "debug": true,
    "url": "http://localhost:9000",
    "timezone": "UTC",
    "locale": "en",
    "fallback_locale": "en",
    "key": "base64:your_app_key_here",
    "cipher": "AES-256-CBC"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 9000,
    "socket_port": 8080
  },
  "database": {
    "default": "mysql",
    "connections": {
      "mysql": {
        "driver": "mysql",
        "host": "localhost",
        "port": 3306,
        "database": "khadem_db",
        "username": "khadem_user",
        "password": "your_password",
        "charset": "utf8mb4",
        "collation": "utf8mb4_unicode_ci"
      },
      "postgresql": {
        "driver": "pgsql",
        "host": "localhost",
        "port": 5432,
        "database": "khadem_db",
        "username": "khadem_user",
        "password": "your_password",
        "charset": "utf8",
        "schema": "public"
      },
      "mongodb": {
        "driver": "mongodb",
        "host": "localhost",
        "port": 27017,
        "database": "khadem_db",
        "username": "",
        "password": ""
      }
    }
  },
  "cache": {
    "default": "file",
    "stores": {
      "file": {
        "driver": "file",
        "path": "storage/cache"
      },
      "redis": {
        "driver": "redis",
        "host": "localhost",
        "port": 6379,
        "password": null,
        "database": 0
      }
    },
    "prefix": "khadem_cache"
  },
  "session": {
    "driver": "file",
    "lifetime": 7200,
    "path": "storage/sessions",
    "domain": null,
    "secure": false,
    "same_site": "lax"
  },
  "logging": {
    "default": "stack",
    "channels": {
      "stack": {
        "driver": "stack",
        "channels": ["single"]
      },
      "single": {
        "driver": "single",
        "path": "storage/logs/app.log",
        "level": "debug"
      },
      "daily": {
        "driver": "daily",
        "path": "storage/logs/app.log",
        "level": "debug",
        "days": 14
      }
    }
  },
  "filesystems": {
    "default": "local",
    "disks": {
      "local": {
        "driver": "local",
        "root": "storage/app"
      },
      "public": {
        "driver": "local",
        "root": "storage/app/public",
        "url": "/storage"
      }
    }
  }
}
